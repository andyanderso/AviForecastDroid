<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sebnarware.avalanche"
    android:versionCode="2000"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COURSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/android:Theme.Light" >
        <uses-library android:name="com.google.android.maps" />

        <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

        <activity
            android:name="com.sebnarware.avalanche.MainActivity"
            android:label="@string/activity_main_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sebnarware.avalanche.WebViewActivity"
            android:label="@string/activity_web_view_title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sebnarware.avalanche.MainActivity" />
        </activity>
        <activity
            android:name="com.sebnarware.avalanche.DangerScaleActivity"
            android:label="@string/activity_danger_scale_title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sebnarware.avalanche.MainActivity" />
        </activity>
        <activity
            android:name="com.sebnarware.avalanche.SubmitObs"
            android:label="Submit Obs"
            android:parentActivityName="com.sebnarware.avalanche.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sebnarware.avalanche.MainActivity" />
        </activity>
        <activity
            android:name="com.sebnarware.avalanche.Donate"
            android:label="@string/title_activity_donate"
            android:parentActivityName="com.sebnarware.avalanche.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sebnarware.avalanche.MainActivity" />
        </activity>
        <activity
            android:name="com.sebnarware.avalanche.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>